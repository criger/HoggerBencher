<Window x:Class="HoggerBencher.BinaryMadness"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoggerBencher"
        mc:Ignorable="d"
        Title="BinaryMadness" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="LightBlue" Grid.ColumnSpan="4"/>
        <Label Content="Binary madness or worth a Nobel prize?" HorizontalAlignment="Center" FontSize="25" Grid.ColumnSpan="4"/>

        <Label Content="How many numbers should the array contain?" Grid.Column="0" Grid.Row="1" Width="auto" VerticalAlignment="Center"/>
        <TextBox Text="10000000" MaxLines="1" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="1" Width="auto" HorizontalAlignment="Stretch" Name="howManyNumbersInArrayInput" />

        <Label Content="Number to find" Grid.Column="0" Grid.Row="2" Width="auto" VerticalAlignment="Center" />
        <TextBox Text="100000" MaxLines="1" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="1" Width="auto" HorizontalAlignment="Stretch" Name="numberToFindInput"/>

        <RadioButton Content="Madness search" IsChecked="True" Grid.Column="2" Grid.Row="1" FontSize="15" Margin="10" HorizontalAlignment="Left" Name="madnessSearchRadioBtn"  />
        <RadioButton Content="Normal binary search" Grid.Column="2" Grid.Row="2" FontSize="15" Margin="10" HorizontalAlignment="Left" Name="normalSearchRadioBtn"/>

        <Button Content="Find number" Grid.Row="1" Grid.Column="3" Grid.RowSpan="2" Name="findNumberBtn" Click="findNumberBtn_Click" Background="LightGreen" />

        <TextBox Grid.ColumnSpan="4" Grid.Row="3" Text="The result of the madness or normal binart search will be displayed here" 
                 TextWrapping="Wrap" Width="auto" Name="binarySearchResult" IsReadOnly="True" 
                 VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto"
                 MaxLines="100" />

    </Grid>
</Window>
